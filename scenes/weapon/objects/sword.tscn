script/source = "extends GenericMeleeWeapon

@onready var sprite = $Sprite
@onready var animation_player = $AnimationPlayer

func _ready():
	create_unique_resource(sprite, \"material\")

func _process_weapon(aim: Vector2):
	super(aim)
	
	rotation = lerp_angle(rotation, aim.angle(), 0.5)
	if cooldown == 0: 
		sprite.flip_v = aim.x < 0
		sprite.rotation = 0.3 if aim.x < 0 else -0.3
	
	if not input_map.is_action_pressed(\"attack\") and cooldown == 0:
		animation_player.play(\"RESET\")

func _attack():
	animation_player.queue(\"swing\")
	cooldown = 0.31
"

